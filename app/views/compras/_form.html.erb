<div class="container">
<%= form_with(model: compra, local: true) do |form| %>
  <% if compra.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(compra.errors.count, "errores") %>

      <ul>
        <% compra.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-6">
  <div class="form-group">
    <%= form.label :fecha %>
    <%= form.date_field :fecha %>
  </div>
</div>
<div class="col-6">
  <div class="form-group">
    <%= form.label :num_fact, 'NÃºmero' %>
    <%= form.number_field :num_fact %>
  </div>
</div>
<div class="col-6">
 <div class="form-group">
    <%= form.label :tipo_factura_id ,"Tipo de Factura"%> <br>
    <%= form.collection_select :tipo_factura_id, TipoFactura.order(:descripcion), :id, :descripcion,class: "chosen-select form-control" %>
  </div>
</div>
</div>
 <div class="form-group">
    <%= form.label :proveedor_id ,"Proveedor"%> <br>
    <%= form.collection_select :proveedor_id, Proveedor.order(:nombre), :id, :nombre, {prompt: "Seleccionar un Proveedor"},{:class=> "chosen-select form-control js-searchable"} %>
  </div>

  <div class="actions">
    <%= form.submit 'Siguiente', class: 'form-control btn btn-success' %>
  </div>
<% end %>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('select').select2({
          width: 300
    });
});
</script>