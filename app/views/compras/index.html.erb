<p id="notice"><%= notice %></p>

<h3 align="center">Compras</h3>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Proveedor</th>
      <th>Núm fact</th>
      <th>Total</th>
      <th>Pago</th>
      <th>Saldo</th>
      <th>Tipo factura</th>
      <th colspan="3">
      <%= link_to 'Nuevo', new_compra_path, class:"btn btn-success" %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.fecha %></td>
        <td><%= compra.proveedor.nombre %></td>
        <td><%= compra.num_fact %></td>
        <td><%= compra.total %></td>
        <td><%= compra.pago %></td>
        <td><%= compra.saldo %></td>
        <td><%= compra.tipo_factura.descripcion %></td>
        <td><%= link_to 'Detalles', compra_id_detalle_path(compra) %></td>
        <td><%= link_to 'Editar', edit_compra_path(compra) %></td>
        <td><%= link_to 'Eliminar', compra, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
