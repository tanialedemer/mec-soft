<p id="notice"><%= notice %></p>

<h3 align="center">Categorías</h3>

<table class="table">
  <thead>
    <tr>
      <th>Descripción</th>
      <th colspan="3">
        <%= link_to 'Nuevo', new_category_path, class:"btn btn-success" %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.descripcion %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>